<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project [<!ENTITY external SYSTEM "links.xml">]>
<project default="javadoc">
	<include file="libraries.xml" />
<target name="javadoc">
<delete dir="doc" />
<mkdir dir="doc" />
<javadoc access="private" 
  sourcepath="src" destdir="doc"
  additionalparam="-linksource"   author="true"   
  nodeprecated="false" nodeprecatedlist="false" 
  noindex="false" nonavbar="false" notree="false" 
  overview="src/overview.html"  verbose="false"
  splitindex="false" use="true" version="true">
  <classpath refid="jar.classpath" />

  <!--
  Not including package elements apparently means that all packages
  in the source directories will be processed.

-->
&external;      
</javadoc>
<echo level="info" message="Javadoc files created for sample project" />
</target>
</project>